@model AddProductModel
@{
    ViewData["Title"] = "Add";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add New Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Product" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Add Product</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Add a New Product</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-controller="Product" asp-action="Add"
                  asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" type="text" class="form-control" id="product-name" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-10">
                            <input asp-for="Price" type="number" class="form-control" id="product-price" placeholder="Price">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Add</button>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                       class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</section>

