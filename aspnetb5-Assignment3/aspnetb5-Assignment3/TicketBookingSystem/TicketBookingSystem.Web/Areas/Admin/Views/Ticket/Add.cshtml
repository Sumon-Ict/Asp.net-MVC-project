@model AddTicketModel
@{
    ViewData["Title"] = "Add Ticket";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add New Ticket</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Ticket" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Add Ticket</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Add a New Ticket</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-controller="Ticket" asp-action="Add"
                  asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="CustomerId" class="col-sm-2 col-form-label">Customer</label>
                        <div class="col-sm-10">
                            <input asp-for="CustomerId" type="number" class="form-control" id="customer-id" placeholder="Customer Id">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Destination" class="col-sm-2 col-form-label">Destination</label>
                        <div class="col-sm-10">
                            <input asp-for="Destination" type="text" class="form-control" id="customer-destination" placeholder="Destination">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="TicketFee" class="col-sm-2 col-form-label">Ticket Fee</label>
                        <div class="col-sm-10">
                            <input asp-for="TicketFee" type="number" class="form-control" id="ticket-fee" placeholder="Ticket Fee">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Add</button>
                    <a asp-area="Admin" asp-controller="Ticket" asp-action="Index"
                       class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</section>

