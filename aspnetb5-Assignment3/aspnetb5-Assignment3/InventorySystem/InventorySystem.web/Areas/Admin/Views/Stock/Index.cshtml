
@{
    ViewData["Title"] = "Index";
}
@section Styles
{
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
}
@section Scripts
{
    <script src="/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $('#products').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "/Admin/Stock/GetStocks",
                "columnDefs": [{
                    "orderable": false,
                    "targets": 2,
                    "render": function (data, type, row) {
                        return `<button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/admin/stock/sell/${data}'" value='${data}'>
                                        <i class="fas fa-check-circle">
                                        </i>
                                        Sell Product
                                    </button>
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="window.location.href='/admin/stock/Buy/${data}'" value='${data}'>
                                        <i class="fas fa-shopping-cart">
                                        </i>
                                        Buy Product
                                    </button>`;
                    }
                }
                ]
            });
        });

    </script>

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Available Stocks</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Product" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Stocks</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Available Stocks</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <partial name="_DeletePopupPartial" />
                    <table id="products" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ProductId</th>
                                <th>Quantity</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ProductId</th>
                                <th>Quantity</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
