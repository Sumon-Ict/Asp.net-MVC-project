
@{
    ViewData["Title"] = "Buy";
}

@model EditStockModel
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Buy Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Stock" asp-action="Index">Stock</a></li>
                    <li class="breadcrumb-item active">Stocks</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->

    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Edit a Product</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-controller="Stock" asp-action="Buy"
                  asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Quantity" />
                    <div class="form-group row">
                        <label asp-for="ProductId" class="col-sm-2 col-form-label">Product Id</label>
                        <div class="col-sm-10">
                            <input asp-for="ProductId" type="number" class="form-control" id="product-price" placeholder="Product Id">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="sellQuantity" class="col-sm-2 col-form-label">Buy Quantity</label>
                        <div class="col-sm-10">
                            <input asp-for="sellQuantity" type="number" class="form-control" id="product-quantity" placeholder="Units">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Buy</button>
                    <a asp-area="Admin" asp-controller="Stock" asp-action="Index"
                       class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</section>

